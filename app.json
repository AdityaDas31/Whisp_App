{
  "expo": {
    "name": "Whisp",
    "slug": "Whisp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "Whisp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification"]
      }
    },
    "android": {
       "softwareKeyboardLayoutMode": "resize",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": false,
      // "edgeToEdgeEnabled": true,
      "permissions": [
        "NOTIFICATIONS",
        "CAMERA",
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-video",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/logo.png",
          "color": "#ffffff"
        }
      ],
      "expo-font",
      "expo-web-browser",
      "expo-build-properties",
      "expo-sqlite",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow access to your photos and videos so you can share media in chat.",
          "cameraPermission": "Allow camera access so you can take photos to share in chat."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Whisp to save photos to your gallery",
          "savePhotosPermission": "Allow Whisp to save photos",
          "isAccessMediaLocationEnabled": true,
          "audioPermission": "Allow Whisp to access audio files"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "6eda410f-8f28-471b-855a-68b1697cbe8e"
      }
    },
    "owner": "lonewolf2024"
  }
}
